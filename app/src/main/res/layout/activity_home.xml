<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/color_background">

        <RelativeLayout
            android:id="@+id/re_shouye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_shouye"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_gaibianshouyetubiao"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_home_shouye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/main_color"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="13dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_classify"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ziyuan"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_home_fenlei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textColor="@color/color_3"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="13dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_shopCar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gouwuche"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_home_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textColor="@color/color_3"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="13dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/wode"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_home_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/color_3"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="13dp"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>